<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="1dp"
            android:clickable="false"
            android:longClickable="false"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cardViewRecurso"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="265dp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/mostrarvisitas"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="50dp">

                        <android.support.v7.widget.AppCompatButton
                            android:text="Ruta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mostrarvisitas"
                            android:layout_toStartOf="@+id/mostrarvisitas"
                            android:id="@+id/btnRuta"
                            android:textColor="@android:color/background_light"
                            android:layout_toLeftOf="@+id/mostrarvisitas"
                            android:layout_weight="1" />

                        <android.support.v7.widget.AppCompatButton
                            android:text="Senderos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/senderoBtn"
                            android:layout_below="@+id/mostrarvisitas"
                            android:layout_toRightOf="@+id/mostrarvisitas"
                            android:layout_toEndOf="@+id/mostrarvisitas"
                            android:textColor="@android:color/background_light"
                            android:layout_weight="1" />

                        <android.support.v7.widget.AppCompatButton
                            android:text="Galeria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/galeriaBtn"
                            android:layout_below="@+id/mostrarvisitas"
                            android:layout_toRightOf="@+id/mostrarvisitas"
                            android:layout_toEndOf="@+id/mostrarvisitas"
                            android:textColor="@android:color/background_light"
                            android:layout_weight="1" />

                </LinearLayout>

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtDescripcionR" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtInformacionR" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtDireccionR" />

                </LinearLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>